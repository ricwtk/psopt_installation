if [[ -z $1 ]]
then
  exit;
fi

cdir=$(pwd)

filepath=$(realpath $1)
dir=$(dirname $filepath)
name=$(basename $filepath)
name_nosuffix=${name%.*}
cd $dir

PSOPTROOT=$(dirname $(realpath $0))/psopt
PSOPTDIR=$PSOPTROOT/PSOPT
DMATRIXDIR=$PSOPTROOT/dmatrix
SUITESPARSEDIR=$PSOPTROOT/SuiteSparse
LUSOLDIR=$PSOPTROOT/lusol
PREFIX=/usr
INCDIR=$PREFIX/include
LIBDIR=$PREFIX/lib
LIB64DIR=$PREFIX/lib64

/usr/bin/g++ -c -O0 -g -I$DMATRIXDIR/include -I$PSOPTDIR/src -DLAPACK -DUNIX -DSPARSE_MATRIX -DUSE_IPOPT -I$SUITESPARSEDIR/CXSparse/Include -I$SUITESPARSEDIR/SuiteSparse_config -I$LUSOLDIR/csrc -I$INCDIR/Interfaces -I$INCDIR/Common -I$INCDIR/LinAlg -fomit-frame-pointer -pipe -DNDEBUG -pedantic-errors -Wimplicit -Wparentheses -Wreturn-type -Wcast-qual -Wall -Wpointer-arith -Wwrite-strings -Wconversion -fPIC -DHAVE_MALLOC $name_nosuffix.cxx -o $name_nosuffix.o

/usr/bin/g++ -O0 -g -I$DMATRIXDIR/include -I$PSOPTDIR/src -DLAPACK -DUNIX -DSPARSE_MATRIX -DUSE_IPOPT -I$SUITESPARSEDIR/CXSparse/Include -I$SUITESPARSEDIR/SuiteSparse_config -I$LUSOLDIR/csrc -I$INCDIR/Interfaces -I$INCDIR/Common -I$INCDIR/LinAlg -fomit-frame-pointer -pipe -DNDEBUG -pedantic-errors -Wimplicit -Wparentheses -Wreturn-type -Wcast-qual -Wall -Wpointer-arith -Wwrite-strings -Wconversion -fPIC -DHAVE_MALLOC $name_nosuffix.o $PSOPTDIR/lib/libpsopt.a $DMATRIXDIR/lib/libdmatrix.a $LUSOLDIR/csrc/liblusol.a $SUITESPARSEDIR/CXSparse/Lib/libcxsparse.a $LIBDIR/x86_64-linux-gnu/libdl.so -o $name_nosuffix -L $PSOPTDIR/lib/libpsopt.a $DMATRIXDIR/lib/libdmatrix.a -lm -lf2c  -llapack -lf77blas -lcblas $LUSOLDIR/csrc/liblusol.a  $SUITESPARSEDIR/CXSparse/Lib/libcxsparse.a -ldl `PKG_CONFIG_PATH=$LIB64DIR/pkgconfig:$LIBDIR/pkgconfig:/usr/share/pkgconfig: /usr/bin/pkg-config --libs ipopt`  $LIB64DIR/libadolc.a $LIBDIR/libColPack.a 

rm -f *.o

if [[ -f ./$name_nosuffix ]]
then
  ./$name_nosuffix
else
  echo 'C++ script is not compiled. No executable is found.'
fi

cd $cdir